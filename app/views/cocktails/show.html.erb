<h1><%= @cocktail.name %></h1>
<%= link_to "All cocktails", root_path, class: 'btn btn-primary' %>
<%= link_to 'Make new dose', new_cocktail_dose_path(@cocktail) %>
<ul class="list-group">

        <% @cocktail.doses.each do |dose| %>
          <li >
            <%= dose.description %>
            <%= dose.ingredient.name %>

          </li>
        <% end %>
      </ul>
