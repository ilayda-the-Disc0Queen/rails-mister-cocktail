<h1>new dose</h1>
<!-- put form here -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Add a dose</h1>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Back to cocktail", cocktail_path(@cocktail), class: 'btn btn-primary' %>
    </div>
  </div>
</div>
